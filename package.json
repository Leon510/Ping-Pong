{
  "name": "pong-multiplayer",
  "version": "1.0.0",
  "description": "Simple online multiplayer Pong game with friend codes",
  "main": "dist/server/server.js",
  "scripts": {
    "build": "tsc && tsc src/client/client.ts --outDir public --target ES2020 --lib ES2020,DOM --module ES2020 --moduleResolution bundler",
    "start": "node dist/server/server.js",
    "dev": "npm run build && npm start",
    "render-build": "npm install && npm run build"
  },
  "keywords": ["pong", "multiplayer", "websocket", "typescript"],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/ws": "^8.5.9",
    "typescript": "^5.3.2"
  }
}
